{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": ["**", "!!**/dist"]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "html": {
    "experimentalFullSupportEnabled": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
"overrides": [
   {
     "includes": ["**/*.astro"],
     "linter": {
       "rules": {
         "style": {
           "useConst": "off",
           "useImportType": "off"
         },
         "correctness": {
           "noUnusedVariables": "off",
           "noUnusedImports": "off"
         }
       }
     }
   }
 ]
}
